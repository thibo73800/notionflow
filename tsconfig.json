{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",  
    "jsx": "react",      
    "module": "es6",
    "moduleResolution": "node",   
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "sourceMap": true,
    "strict": true,
    "noEmitOnError": true
  },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }